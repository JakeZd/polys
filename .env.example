# Docker Compose Environment Variables

# PostgreSQL
POSTGRES_DB=polysynapse_db
POSTGRES_USER=polysynapse_user
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_PORT=5432

# OpenAI (обязательно!)
OPENAI_API_KEY=sk-your-openai-api-key

# Backend Security
JWT_SECRET=your-secret-key-change-this
ADMIN_KEY=your-admin-key-change-this

# Server
NODE_ENV=production
BACKEND_PORT=4000
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# AI Configuration
RUN_AI_ON_START=true
AI_CONFIDENCE_THRESHOLD=0.70
AI_MIN_ENTRY_PRICE=0.05
AI_MAX_ENTRY_PRICE=0.90
AI_MIN_EDGE=0.03
AI_BETS_PER_CATEGORY=2
AI_MAX_MARKET_DAYS=90
AI_STAKE_AMOUNT=100

# Market Configuration
MARKET_CATEGORIES=politics,crypto,sports,finance,world,tech,science,pop-culture
