{
  "name": "polysynapse-full",
  "version": "2.0.0",
  "description": "PolySynapse - Full-stack neural prediction market platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "lint": "cd frontend && npm run lint",
    "test": "cd backend && npm test",
    "prisma:studio": "cd backend && npx prisma studio",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:seed": "cd backend && npm run prisma:seed",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/.next backend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "prediction-market",
    "polymarket",
    "web3",
    "ai-betting",
    "ethereum",
    "nextjs",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@web3modal/common": "^5.1.11",
    "@web3modal/scaffold-ui": "^5.1.11",
    "@web3modal/ui": "^5.1.11"
  }
}
